{
  "name": "@ds-project/figma-widget",
  "version": "1.0.0",
  "private": true,
  "description": "DS Pro",
  "license": "MIT License",
  "author": "Figma",
  "type": "module",
  "scripts": {
    "build": "npm run build:ui && npm run build:main -- --minify",
    "build:main": "vite build -c ./vite.config.widget.ts",
    "build:ui": "npx vite build --minify esbuild",
    "build:watch": "concurrently -n widget,ui \"npm run build:main -- --watch\" \"npm run build:ui -- --watch\"",
    "dev": "concurrently -n tsc,build,vite 'npm:tsc:watch' 'npm:build:watch' 'vite'",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "lint": "eslint",
    "test": "npm run tsc && npm run build",
    "tsc": "npm run tsc:main && npm run tsc:ui",
    "tsc:main": "tsc --noEmit -p widget-src",
    "tsc:ui": "tsc --noEmit -p ui-src",
    "tsc:watch": "concurrently -n widget,ui \"npm run tsc:main -- --watch --preserveWatchOutput\" \"npm run tsc:ui -- --watch --preserveWatchOutput\"",
    "type-check": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@ds-project/prettier",
  "dependencies": {
    "@create-figma-plugin/utilities": "^3.2.0",
    "@tanstack/react-query": "^5.51.24",
    "memoize": "^10.0.0",
    "object-hash": "^3.0.0",
    "rambda": "^9.2.1",
    "react": "catalog:",
    "react-dom": "catalog:",
    "style-dictionary": "^4.1.0",
    "superjson": "^2.2.1",
    "trpc-token-refresh-link": "^0.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ds-project/api": "workspace:*",
    "@ds-project/components": "workspace:*",
    "@ds-project/eslint": "workspace:*",
    "@ds-project/figma-messaging": "workspace:*",
    "@ds-project/prettier": "workspace:*",
    "@figma/plugin-typings": "*",
    "@figma/widget-typings": "*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "concurrently": "^6.3.0",
    "esbuild": "^0.13.5",
    "eslint": "catalog:",
    "rollup-preserve-directives": "^1.1.1",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-singlefile": "^0.5.1"
  }
}
