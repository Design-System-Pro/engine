  "type": "module",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    },
    "./globals.css": "./dist/globals.css"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "prettier": "@vercel/style-guide/prettier",
  "scripts": {
    "build": "tsc && vite build && pnpm build:tailwind",
    "build:react": "vite build",
    "build:tailwind": "NODE_ENV=production tailwindcss -i ./src/globals.css -o ./dist/globals.css --postcss --minify",
    "dev:tailwind": "tailwindcss -i ./src/globals.css -o ./dist/globals.css --postcss --watch",
    "dev": "concurrently -n react,tailwind \"pnpm run build:react --watch\" \"pnpm dev:tailwind\"",
    "lint": "eslint --max-warnings=0 .",
    "type-check": "tsc"
  },
