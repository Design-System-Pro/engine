{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "jsxFactory": "figma.widget.h",
    "jsxFragmentFactory": "figma.widget.Fragment",
    "target": "ES6",
    "lib": ["ES6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "typeRoots": ["../../node_modules/@figma", "../../node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}